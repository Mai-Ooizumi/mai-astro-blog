---
import { Icon } from "astro-icon/components";

export interface Props {
  name: string;
}

const { name } = Astro.props;
---

<div
  class="flex flex-row items-center rounded-lg bg-(--primary-color-lighten) p-2 dark:bg-(--card-color-lighten)"
>
  <Icon name={name} size={22} class="text-(--primary-color)" />
</div>
